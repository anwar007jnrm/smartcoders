{
  "pages": [
    {
      "pageIndex": 1,
      "title": "Loan Details",
      "description" : "Please provide the details of the loan you are applying for.",
      "fields": [
        {
          "label": "Loan Amount",
          "name": "loanAmount",
          "type": "number",
          "required": true,
          "validation": {
            "min": 10000,
            "max": 1000000
          }
        },
        {
          "label": "Loan Purpose",
          "name": "loanPurpose",
          "type": "select",
          "options": ["Home", "Car", "Education", "Business"],
          "required": true
        }
      ]
    },
    {
      "pageIndex": 2,
      "title": "Employment Info",
      "description": "Please provide your employment details.",
      "fields": [
        {
          "label": "Employment Type",
          "name": "employmentType",
          "type": "radio",
          "options": ["Salaried", "Self-Employed"],
          "required": true
        },
        {
          "label": "Monthly Income",
          "name": "monthlyIncome",
          "type": "number",
          "required": true,
          "validation": {
            "min": 1000
          }
        },
        {
          "label": "Income Proof Document",
          "name": "incomeProof",
          "type": "file",
          "required": true,
          "accept": [".pdf", ".jpg", ".jpeg"]
        }
      ]
    },
    {
      "pageIndex": 3,
      "title": "More details required",
      "description": "Please provide your employment details.",
      "fields": [
        {
          "label": "Employment Type",
          "name": "employmentType",
          "type": "radio",
          "options": ["Salaried", "Self-Employed"],
          "required": true
        },
        {
          "label": "Monthly Income",
          "name": "monthlyIncome",
          "type": "number",
          "required": true,
          "validation": {
            "min": 1000
          }
        },
        {
          "label": "Income Proof Document",
          "name": "incomeProof",
          "type": "file",
          "required": true,
          "accept": [".pdf", ".jpg", ".jpeg"]
        }
      ]
    },
    {
      "pageIndex": 4,
      "title": "Identification Upload",
       "description": "Please upload your identification documents.",
      "fields": [
        {
          "label": "PAN Number",
          "name": "pan",
          "type": "text",
          "required": true,
          "validation": {
            "regex": "^[A-Z]{5}[0-9]{4}[A-Z]$"
          }
        },
        {
          "label": "PAN Document Upload",
          "name": "panDocument",
          "type": "file",
          "required": true,
          "accept": [".pdf", ".jpg"]
        }
      ]
    },
    {
      "pageIndex": 5,
