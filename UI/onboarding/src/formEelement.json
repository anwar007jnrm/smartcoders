        {
          "label": "PAN Number",
          "name": "pan",
          "type": "text",
          "required": true,
          "validation": {
            "regex": "^[A-Z]{5}[0-9]{4}[A-Z]$"
          }
        },
        {
          "label": "PAN Document Upload",
          "name": "panDocument",
          "type": "file",
